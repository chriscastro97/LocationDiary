<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/place_name"/>

    <EditText
        android:id="@+id/pirate_place_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/place_name_hint"/>


    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/location"/>

    <EditText
        android:id="@+id/pirate_place_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/location_hint"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/last_visited_date"/>

    <EditText
        android:id="@+id/pirate_place_last_visited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/last_visited_date_hint"/>

    <Button
        android:id="@+id/check_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_in_button"
        android:textAlignment="center"
        android:drawablePadding="4dp"/>

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:text="@string/place_images"/>

    <ImageView
        android:id="@+id/pirate_place_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        app:srcCompat="@android:drawable/btn_star"
        android:contentDescription="@string/place_image"/>

</LinearLayout>